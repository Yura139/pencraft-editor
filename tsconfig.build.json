{
  "extends": "./tsconfig.json",
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.spec.ts",
    "src/__tests__",
    "src/setupTests.ts",
    "src/example",
    "webpack.config.js",
    "webpack.config.lib.js",
    "jest.config.js"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true
  }
} 