{
  "extends": "./tsconfig.json",
  "include": [
    "src/index.ts",
    "src/components/**/*",
    "src/plugins/**/*",
    "src/types/**/*",
    "src/utils/**/*"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.spec.ts",
    "src/__tests__",
    "src/setupTests.ts",
    "src/example",
    "src/index.tsx",
    "webpack.config.js",
    "webpack.config.lib.js",
    "jest.config.js"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
} 